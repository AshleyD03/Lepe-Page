<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Lepe - Admin Editor </title>
    <script src="https://www.gstatic.com/firebasejs/7.15.5/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/7.13.1/firebase-auth.js"></script>
    <link href='https://fonts.googleapis.com/css?family=Red Hat Text' rel='stylesheet'>
    <script src="https://www.gstatic.com/firebasejs/7.13.1/firebase-storage.js"></script>
    <script src="https://www.gstatic.com/firebasejs/7.13.1/firebase-firestore.js"></script>
    <link rel="stylesheet" href="../public/style/editor.css">
</head>

<body>
    <!-- Nav bar on top -->
    <!-- Each buttons value reveals that class -->
    <div id="header-body">
        <div class="header-item">
            <img id="logo" src="../public/image/white-logo.png" alt="Lepe park logo">
        </div>
        <div id="header-buttons" class="header-item">
            <button id="click-cate" class="header-button" value="category-reveal">
                <div class="header-text">Categories</div>
            </button>
            <button id="click-news" class="header-button" value="news-reveal">
                <div class="header-text">News</div>
            </button>
            <button id="click-char" class="header-button" value="accounts-reveal">
                <div class="header-text">Accounts</div>
            </button>
            <button id="logOut">
                <div class="header-text black">Log out</div>
            </button>
        </div>
    </div>

    <!-- Option body - Parts that change there visibility are part of hide-all class -->
    <!-- Intro Body -->
    <div id="intro-body" class="intro-body hide-all">
        <div class="intro">
            <h1 id="wellcome-msg" class="margin-none"></h1>
            <h5 class="margin-none margin-bot"> To the Lepe console </h5>
            <p> Here you can edit your websites articles, news <br> and admin account settings. Just click one
                of the categories you <br> wish to edit on the top bar. </p>
        </div>
    </div>

    <!-- Category Body -->
    <div id="cate-body" class="body category-reveal hide-all hidden">
        <div class="bar">
            <div class="bar-top">
                Categories
                <button id="create-article" class="icon-button" value='cate-create'>
                    <img class="icon-img" src="../public/image/add.png" alt="create a new article">
                </button>
            </div>
            <button class="bar-button">
                This will be auto generated
            </button>
        </div>

        <div class="form">
            <!-- Intro Message -->
            <div id="cate-intro" class="category-reveal hide-all hide-form intro-body">
                <div class="intro">
                    Just click a category to see what articles it has and start editing
                </div>
            </div>

            <!-- Create Article -->
            <div id="cate-create" class="hide-all hide-form">
                <h1 class="title"> Create Article : </h1>
                <hr>
                <form class="form">
                    <div class="grid">
                        <h2 class="input-name"> Categories </h2>
                        <div class="input">
                            <input type="checkbox" id="na-things" class="na-check" value="Things to Do">
                            <label for="na-things"> Things to Do </label>
                            <input type="checkbox" id="na-facilities" class="na-check" value="Facilities">
                            <label for="na-facilities"> Facilities </label>
                            <input type="checkbox" id="na-volunteering" class="na-check" value="Volunteering">
                            <label for="na-volunteering"> Volunteering </label>
                            <input type="checkbox" id="na-access" class="na-check" value="Accesibility">
                            <label for="na-acess"> Accesibility </label>
                            <input type="checkbox" id="na-group" class="na-check" value="Group Visits">
                            <label for="na-group"> Group Visits </label>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- News Body -->
    <div id="news-body" class="body news-reveal hide-all hidden">
        <div id="news-bar" class="bar">
            <div id="news-bar-top" class="bar-top">
                News 
                <button id="add-news" class="icon-button" value='news-form'>
                    <img class="icon-img" src="../public/image/add.png" alt="create a new news page">
                </button>
                <button id="reload-news" class="icon-button">
                    <img class="icon-img" src="../public/image/reload.png" alt="reload news pages">
                </button>
            </div>
        </div>

        <div class="form">
            <!-- News Form -->
            <div id="news-form" class="hide-all hide-form">
                <h1 id="news-edit-title" class="title"> Create News Article </h1>
                <hr>
                <form id="news-editing-or-creating-form" class="form">
                    <div class="grid">
                        <h2 class="input-name"> Title </h2>
                        <input type="title" id="na-title" class="input" required />
                    </div>
                    <div class="grid space-under">
                        <h2 class="input-name"> Article Text </h2>
                        <textarea type="text" id="na-article-text" class="input w-full h-12rem" required></textarea>
                    </div> 
                    <div class="grid space-under">
                        <h2 class="input-name"> Article Image </h2>
                        <div class="img-line input h-8rem">
                            <img id="na-article-image" src="../public/image/empty.png" alt="Img of what is currently ready to upload" class="img-prev">
                            <input type="file" id="na-article-file" required />
                        </div>
                    </div>
                    <div class="grid space-under">
                        <div></div>
                        <button id="news-submit" type="submit" class="input submit"> Upload News Article </button>
                    </div>
                </form>
            </div>

            <!-- Intro Message -->
            <div id="news-intro" class="news-reveal hide-all hide-form">
                <h1 class="title">Wellcome</h1>
                <hr>
                <div class="intro form">
                    Either create a new news article or edit / delete a current one
                </div>
            </div>
        </div>
    </div>

    <!-- Account body-->
    <div id="acco-body" class="body accounts-reveal hide-all hidden">
        <div class="bar">
            <div class="bar-top">
                Accounts
            </div>
            <button class="bar-button" value="acco-reset">
                Reset Password
            </button>
            <button class="bar-button" value="acco-make">
                Make Account
            </button>
        </div>

        <div class="form">
            <!-- Reset Password -->
            <div id="acco-reset" class="hide-all hide-form">
                <h1 class="title">Send Password Reset</h1>
                <hr>
                <form id="send-reset-email" class="form" autocomplete="off">
                    <div class="grid">
                        <h2 class="input-name"> Email </h2>
                        <input type="email" id="sr-email" class="input" required />
                    </div>
                    <div class="grid">
                        <div> </div>
                        <button type="submit" class="input submit"> Send Email </button>
                    </div>
                </form>
            </div>

            <!-- Create Account -->
            <div id="acco-make" class="hide-all hide-form">
                <h1 class="title">Create an Account</h1>
                <hr>
                <form id="create-account" class="form" autocomplete="off">
                    <div class="grid">
                        <h2 class="input-name"> Username </h2>
                        <input type="username" id="ca-username" class="input" required />
                    </div>
                    <div class="grid">
                        <h2 class="input-name"> Email </h2>
                        <input type="email" id="ca-email" class="input" required />
                    </div>
                    <div class="grid">
                        <h2 class="input-name"> Password </h2>
                        <input type="password" id="ca-password" class="input" required  />
                    </div>
                    <div class="grid">
                        <div> </div>
                        <button type="submit" class="input submit"> Create account </button>
                    </div>
                </form>
            </div>

            <!-- Intro Message -->
            <div id="acco-intro" class="accounts-reveal hide-all hide-form form">
                <h1 class="title">Wellcome</h1>
                <hr>
                <div class="intro form">
                    Here you can send password resets to account <br> emails and make new accounts
                </div>
            </div>
        </div>
    </div>



    <script src="../public/script/editor.js"></script>
</body>

</html>